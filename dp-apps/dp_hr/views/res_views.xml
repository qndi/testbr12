<odoo>
    <record id="view_company_form_inherit_dp_hr" model="ir.ui.view">
        <field name="name">view_company_form_inherit_dp_hr</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="timesheets" string="Time Reports">
                    <group>
                        <field name="leave_type_vacation"/>
                        <field name="leave_type_compensation"/>
                        <field name="leave_type_sickness"/>
                        <field name="leave_type_public_holiday"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
